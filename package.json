{
	"name": "vertical-limit",
	"displayName": "Vertical Limit",
	"description": "Vertical Limit is a collection of commands to modify, select and navigate text blocks in order to unlock the full potential of working with multiple cursors.",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Other"
	],
	"publisher": "generik",
	"repository": {
		"type": "git",
		"url": "https://github.com/generikvault/vertical-limit"
	},
	"activationEvents": [
		"onCommand:vertical-limit.moveCursorFirstBlockLine",
		"onCommand:vertical-limit.moveCursorLastBlockLine",
		"onCommand:vertical-limit.selectUntilBlockFirstLine",
		"onCommand:vertical-limit.selectUntilBlockLastLine",
		"onCommand:vertical-limit.insertCursorsUntilFirstBlockLine",
		"onCommand:vertical-limit.insertCursorsUntilLastBlockLinee",
		"onCommand:vertical-limit.enumerate"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "vertical-limit.moveCursorFirstBlockLine",
				"title": "Jump Cursor To First Line Of Block"
			},
			{
				"command": "vertical-limit.moveCursorLastBlockLine",
				"title": "Jump Cursor To Last Line Of Block"
			},
			{
				"command": "vertical-limit.selectUntilBlockFirstLine",
				"title": "Select Until First Line Of Block"
			},
			{
				"command": "vertical-limit.selectUntilBlockLastLine",
				"title": "Select Until Last Line Of Block"
			},
			{
				"command": "vertical-limit.insertCursorsUntilFirstBlockLine",
				"title": "Insert Cursors Until First Line Of Block"
			},
			{
				"command": "vertical-limit.insertCursorsUntilLastBlockLine",
				"title": "Insert Cursors Until Last Line Of Block"
			},
			{
				"command": "vertical-limit.enumerate",
				"title": "Insert Enumerations"
			}
		],
		"keybindings": [
			{
				"command": "vertical-limit.moveCursorFirstBlockLine",
				"key": "ctrl+up",
				"when": "editorTextFocus"
			},
			{
				"command": "vertical-limit.moveCursorLastBlockLine",
				"key": "ctrl+down",
				"when": "editorTextFocus"
			},
			{
				"command": "vertical-limit.selectUntilBlockFirstLine",
				"key": "ctrl+shift+up",
				"when": "editorTextFocus"
			},
			{
				"command": "vertical-limit.selectUntilBlockLastLine",
				"key": "ctrl+shift+down",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.42.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	}
}
